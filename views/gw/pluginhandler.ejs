<%_ script.create('JQuery')
  .addMiddle(`
$.plugin = {
    handle(clicker) {
        const self = this;
        const icon = clicker.find('.icon').attr('class');
        self.container.find('.message .header').html(clicker.text());
        self.container.find('.message .icon').attr('class', '').addClass(icon);
        self.container.find('.message .content p').html(clicker.data('desc'));
        $.get('${route('Plugin', {name: 'index', plugin: 'PLUGIN'})}'.replace(/PLUGIN/, clicker.data('plugin')))
            .done(function(html) {
                self.container.find('.plugin-content').html(html);
            })
        ;
    },
    init() {
        const self = this;
        self.container = $('.plugin-container');
    }
}
`) -%>
